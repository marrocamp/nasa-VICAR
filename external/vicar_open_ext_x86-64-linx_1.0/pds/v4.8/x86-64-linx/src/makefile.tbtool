
FLAGS       =  -DSUN_UNIX -DLINUX -DPDS_TOOLBOX

# Change this to the path where your ODL library, header, and source
# files are located in your directory.
ODLC_DIR    =  odlc
LABLIB_DIR = lablib
LIB_DIR = lib

TBTOOL_DIR = legacy/tbtool
SHARED_DIR = legacy/shared

INC_PATH  = -I$(ODLC_DIR) -I$(LABLIB_DIR) -I$(TBTOOL_DIR) -I$(SHARED_DIR)
LIB_PATH  = -L$(LIB_DIR)

LIBS      =   -lm -lodlc_lablib

#
#        Translator Options
#
#CCOPTS      = -c -O $(INC_PATH)
CCOPTS = -c -O $(INC_PATH)
LDOPTS      = $(LIB_PATH)


#
#        Translator Definitions
#
CC        = gcc
LD        = gcc

#
#        Utility Definitions
#
COPY_CMD  = cp
DEL_CMD   = rm
MOVE_CMD  = mv

.c.o:
	$(CC) $(FLAGS) $(CCOPTS) $< -o $@;
#
#
#
#        Application Targets and Dependencies
#
all:      bin/tbtool

clean:
	- $(DEL_CMD) $(TBTOOL_DIR)/*.o $(SHARED_DIR)/*.o 
	- $(DEL_CMD) bin/tbtool

#
#        List the project object modules
#
OBJECTFILES1 = $(TBTOOL_DIR)/tbtool.o $(SHARED_DIR)/formtype.o $(SHARED_DIR)/labtool.o $(SHARED_DIR)/search.o

OBJECTFILES = $(OBJECTFILES1)

#
#        List the project dependencies
#


$(SHARED_DIR)/labtool.o: $(SHARED_DIR)/labtool.c $(ODLC_DIR)/pdsdef.h $(LABLIB_DIR)/label.h $(SHARED_DIR)/labtool.h $(LABLIB_DIR)/labutil.h $(ODLC_DIR)/utildef.h \
           $(LABLIB_DIR)/errordef.h $(ODLC_DIR)/sysdef.h

$(SHARED_DIR)/formtype.o: $(SHARED_DIR)/formtype.c $(ODLC_DIR)/pdsdef.h $(SHARED_DIR)/formtype.h $(SHARED_DIR)/formtype2.h

$(SHARED_DIR)/search.o: $(SHARED_DIR)/search.h $(ODLC_DIR)/pdsdef.h $(SHARED_DIR)/search.h $(LABLIB_DIR)/errordef.h $(ODLC_DIR)/utildef.h

$(TBTOOL_DIR)/tbtool.o: $(TBTOOL_DIR)/tbtool.c $(ODLC_DIR)/pdsdef.h $(ODLC_DIR)/pdsglob.h $(SHARED_DIR)/ddaccess.h $(LABLIB_DIR)/errordef.h $(LABLIB_DIR)/fiodef.h $(LABLIB_DIR)/label.h \
          $(LABLIB_DIR)/labutil.h $(SHARED_DIR)/labtool.h $(ODLC_DIR)/sysdef.h $(ODLC_DIR)/utildef.h $(SHARED_DIR)/formtype.h


#
#        Application link line
#
bin/tbtool: $(OBJECTFILES) 
	$(LD) $(OBJECTFILES) $(LDOPTS) $(LIBS) -o $@

